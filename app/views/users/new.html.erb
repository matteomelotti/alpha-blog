<% if @user.errors.any? %>
    <h2>Found errors</h2>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @user do |f| %>
    <p>
        <%= f.label :username %><br/>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label :email %><br/>
        <%= f.text_area :email %>
    </p>
    <p>
        <%= f.label :password %><br/>
        <%= f.text_area :password %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>